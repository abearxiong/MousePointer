[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%Cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%Unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"
HKLM,"SOFTWARE\Microsoft\Windows\CurrentVersion\Runonce\Setup\","",,"rundll32.exe shell32.dll,Control_RunDLL main.cpl,,1"

[Scheme.Cur]
Droid.AlternateSelect.cur
Droid.Busy.ani
Droid.DiagonalResize1.cur
Droid.DiagonalResize2.cur
Droid.HelpSelect.cur
Droid.HorizontalResize.cur
Droid.LinkSelect.cur
Droid.Move.cur
Droid.NormalSelect.cur
Droid.PrecisionSelect.cur
Droid.TextSelect.cur
Droid.Unavailable.cur
Droid.VerticalResize.cur
Droid.WorkingInBackground.ani
Droid.Handwriting.cur

[Strings]
CUR_DIR		= "Cursors\Droid"
SCHEME_NAME	= "[÷¬√¿ªØ] Droid"
alternate	= "Droid.AlternateSelect.cur"
busy		= "Droid.Busy.ani"
dgn1		= "Droid.DiagonalResize1.cur"
dgn2		= "Droid.DiagonalResize2.cur"
horz		= "Droid.HorizontalResize.cur"
vert		= "Droid.VerticalResize.cur"
help		= "Droid.HelpSelect.cur"
link		= "Droid.LinkSelect.cur"
move		= "Droid.Move.cur"
pointer		= "Droid.NormalSelect.cur"
cross		= "Droid.PrecisionSelect.cur"
text		= "Droid.TextSelect.cur"
unavailiable    = "Droid.Unavailable.cur"
work		= "Droid.WorkingInBackground.ani"
hand		= "Droid.Handwriting.cur"
